<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/x50"
    android:background="@color/btn_blue">


    <ImageView
        android:id="@+id/btnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x10"
        android:paddingStart="@dimen/x10"
        android:paddingEnd="@dimen/x10"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher"
        android:visibility="visible" />


    <com.ingic.ezgoreload.ui.views.AnyTextView
        android:id="@+id/txt_subHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Template"
        android:textColor="@color/white"
        android:textSize="@dimen/x22"
        app:typeface="OpenSans-Regular.ttf" />


    <ImageView
        android:id="@+id/btnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x10"
        android:paddingStart="@dimen/x10"
        android:paddingEnd="@dimen/x10"
        android:src="@drawable/ic_launcher"
        android:visibility="visible" />

    <com.ingic.ezgoreload.ui.views.AnyEditTextView
        android:id="@+id/edtSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x10"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/x12"
        android:layout_marginEnd="@dimen/x12"
        android:layout_toEndOf="@+id/btnLeft"
        android:layout_toStartOf="@+id/btnRight"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="@string/search"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:paddingStart="@dimen/x10"
        android:maxLength="30"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="@dimen/x15"
        app:typeface="OpenSans-Regular.ttf"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rl_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x10"
        android:visibility="gone">

        <com.ingic.ezgoreload.ui.views.AnyTextView
            android:id="@+id/txt_balanceTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Template"
            android:textColor="@color/green"
            android:textSize="@dimen/x16"
            app:typeface="OpenSans-Regular.ttf" />

        <com.ingic.ezgoreload.ui.views.AnyTextView
            android:id="@+id/txt_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_balanceTotal"
            android:layout_centerHorizontal="true"
            android:text="Balance"
            android:textColor="@color/white"
            android:textSize="@dimen/x14"
            app:typeface="OpenSans-Regular.ttf" />

    </RelativeLayout>

</RelativeLayout>